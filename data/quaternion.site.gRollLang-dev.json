{
    "app-id": "quaternion.site.gRollLang",
    "tags": ["development"],

    "runtime": "org.gnome.Platform",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],

    "command": "gRollLang",
    "desktop-file-name-suffix": " ☢️",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],

    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [],
        "env": {
            "CARGO_HOME": "/run/build/gRollLang/cargo",
            "RUSTFLAGS": "--error-format=short --remap-path-prefix =../",
            "RUST_BACKTRACE": "1"
        }
    },

    "modules": [
        {
            "name": "gRollLang",
            "buildsystem": "simple",
            "build-commands": [
                "cargo -V",
                "rustc -V",
                "make install PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}