{
    "app-id": "jacob.guenther.gRollLang",
    "tags": [],

    "runtime": "org.gnome.Platform",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],

    "command": "gRollLang",
    "desktop-file-name-suffix": "",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],

    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [],
        "env": {
            "CARGO_HOME": "/run/build/gRollLang/cargo",
            "RUSTFLAGS": "--remap-path-prefix =../",
            "RUST_BACKTRACE": "0"
        }
    },

    "modules": [
        {
            "name": "gRollLang",
            "buildsystem": "simple",
            "build-commands": [
                "make",
                "make install PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jacobguenther/gRollLang.git",
                    "branch": "main",
                    "commit": "e7932b36442d7396a9b2ec013ad74803196c7492"
                }
            ]
        }
    ]
}